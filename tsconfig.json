{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "./src",
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
    ]
}
